import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.SocketException;


public class RcClient {
	private DatagramSocket dataSocket;
	private DatagramPacket dataPacket;
	private byte sendDataByte[];
	private String sendStr;

	public RcClient(String ip,int PORT) {
		try {
			dataSocket = new DatagramSocket(PORT);
			sendDataByte = new byte[20];
			byte ipaddress[]=ip.getBytes();
			dataPacket = new DatagramPacket(sendDataByte, sendDataByte.length,
					InetAddress.getByAddress(ipaddress), PORT);
		} catch (SocketException se) {
			se.printStackTrace();
		} catch (IOException ie) {
			ie.printStackTrace();
		}
	}

	public void send() throws IOException{
		sendStr = "";
		sendDataByte = sendStr.getBytes();
		dataSocket.send(dataPacket);
	}

}
